@using System.Web.Optimization
@using TekConf.RemoteData.Dtos.v1
@using TekConf.UI.Web
@model TekConf.UI.Web.Controllers.SpeakerDetailViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
	<link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico">
    <title>@Model.Conference.name- @Model.Speaker.fullName - tekconf</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">

    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600" rel="stylesheet" type="text/css">
    @Styles.Render("~/css/session/detail")

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
		<!-- API NOTE : This page is generated by calling http://api.tekconf.com/v1/conferences/@Model.Conference.slug/speakers/@Model.Speaker.slug -->

</head>

<body>

    @Html.Partial("Header")

    <div id="subheader">
        <div class="inner">
            <div class="container">
                <h1>@Model.Conference.name</h1>
            </div>
            <!-- /.container -->
        </div>
        <!-- /inner -->
    </div>
    <!-- /subheader -->

    <div id="subpage">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <div class="big-intro">
                        @if (!string.IsNullOrWhiteSpace(Model.Speaker.profileImageUrl))
                        {
                            <div class="img">
                                <img src="@Model.Speaker.profileImageUrl" alt="@Model.Speaker.fullName" />
                            </div>
                            <text>&nbsp;</text>  
                        }
                        @Model.Speaker.fullName
                    </div>
                </div>
                <!-- /span12 -->
            </div>
            <!-- /row -->
            <br />
            <br />

            <div class="row">

                <div class="span6">
                    @if (!string.IsNullOrWhiteSpace(@Model.Speaker.description))
                    {
                        <p>@Model.Speaker.description</p>
                    }
                    else
                    {
                        <p>@Model.Speaker.fullName has not given us any bio.</p>
                    }
                </div>
                <!-- /span6 -->

                <div class="span4">
                    <div class="sidebar">
                        <h4><span class="slash">//</span> More Information</h4>
                        <p>

                            @if (!string.IsNullOrWhiteSpace(Model.Speaker.blogUrl))
                            {
                                <img src="~/img/social/website-16x16.png" /> @HtmlHelpers.SimpleLink(Model.Speaker.blogUrl, Model.Speaker.blogUrl.Replace("http://", ""))<br />
                            }

                            @if (!string.IsNullOrWhiteSpace(Model.Speaker.emailAddress))
                            {
                                <img src="~/img/social/email-16x16.png" /> @Model.Speaker.emailAddress<br />
                            }

                            @if (!string.IsNullOrWhiteSpace(Model.Speaker.phoneNumber))
                            {
                                <img src="~/img/social/phone.png" /> @HtmlHelpers.PhoneLink(Model.Speaker.phoneNumber)<br />
                            }

                            @if (!string.IsNullOrWhiteSpace(Model.Speaker.twitterName))
                            {
                                <img src="~/img/social/twitter-16x16.png" /> @HtmlHelpers.TwitterUserLink(Model.Speaker.twitterName)<br />
                            }

                            @if (!string.IsNullOrWhiteSpace(Model.Speaker.facebookUrl))
                            {
                                <img src="~/img/social/facebook-16x16.png" /> @HtmlHelpers.SimpleLink(Model.Speaker.facebookUrl, "Facebook")<br />
                            }

                            @if (!string.IsNullOrWhiteSpace(Model.Speaker.googlePlusUrl))
                            {
                                <img src="~/img/social/googlePlus-16x16.png" /> @HtmlHelpers.SimpleLink(Model.Speaker.googlePlusUrl, "Google+")<br />
                            }

                            @if (!string.IsNullOrWhiteSpace(Model.Speaker.vimeoUrl))
                            {
                                <img src="~/img/social/vimeo-16x16.png" /> @HtmlHelpers.SimpleLink(Model.Speaker.vimeoUrl, "Vimeo")<br />
                            }

                            @if (!string.IsNullOrWhiteSpace(Model.Speaker.youtubeUrl))
                            {
                                <img src="~/img/social/youtube-16x16.png" /> @HtmlHelpers.SimpleLink(Model.Speaker.youtubeUrl, "YouTube")<br />
                            }

                            @if (!string.IsNullOrWhiteSpace(Model.Speaker.githubUrl))
                            {
                                <img src="~/img/social/github-16x16.png" /> @HtmlHelpers.SimpleLink(Model.Speaker.googlePlusUrl, "Github")<br />
                            }

                            @if (!string.IsNullOrWhiteSpace(Model.Speaker.linkedInUrl))
                            {
                                <img src="~/img/social/linkedin-16x16.png" /> @HtmlHelpers.SimpleLink(Model.Speaker.linkedInUrl, "LinkedIn")<br />
                            }

                            @if (!string.IsNullOrWhiteSpace(Model.Speaker.stackoverflowUrl))
                            {
                                <img src="~/img/social/stackoverflow-16x16.png" /> @HtmlHelpers.SimpleLink(Model.Speaker.stackoverflowUrl, "StackOverflow")<br />
                            }

                            @if (!string.IsNullOrWhiteSpace(Model.Speaker.coderWallUrl))
                            {
                                <img src="~/img/social/coderwall.png" /> @HtmlHelpers.SimpleLink(Model.Speaker.coderWallUrl, "CoderWall")<br />
                            }

                            @if (!string.IsNullOrWhiteSpace(Model.Speaker.bitbucketUrl))
                            {
                                <img src="~/img/social/bitbucket.png" /> @HtmlHelpers.SimpleLink(Model.Speaker.bitbucketUrl, "BitBucket")<br />
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.Speaker.codeplexUrl))
                            {
                                <img src="~/img/social/codeplex.png" /> @HtmlHelpers.SimpleLink(Model.Speaker.codeplexUrl, "CodePlex")<br />
                            }
                        </p>
                        @if (Html.IsAdmin())
                        {
                        @Html.RouteLink("Edit Speaker", "AdminEditSpeaker", new { conferenceSlug = Model.Conference.slug, speakerSlug = Model.Speaker.slug}, new { @class = "btn btn-info" })
                        }
                    </div>
                    <!-- /sidebar -->
                </div>
                <!-- /span4 -->


            </div>
            <!-- /row -->

            <br />
            <br />

            <div class="row">
                <div class="span12">
                    @if (Model.Sessions.Any())
                    {
                        <h3><span class="slash">//</span> Sessions</h3>
                    }
                </div>
                <!-- /span12 -->

                @foreach (var session in Model.Sessions ?? new List<SessionsDto>())
                {
                    
                    <div class="span4">
                        <div class="about-user">
                            <h4>@Html.RouteLink(session.title, "SessionDetail", new { conferenceSlug = Model.Conference.slug, sessionSlug = session.slug }, null)</h4>

                            @HtmlHelpers.FormatSessionTime(session.start, session.end)<br />@session.room<br />
                            <a href="#" class="btn btn-small btn-success btn-inverse">Add to Schedule</a><br />
                            <br />
                            <p>@session.description</p>
                        </div>
                        <!-- /about-user -->

                    </div>
                    <!-- /span4 -->                    
                }
            </div>
            <!-- /row -->

        </div>
        <!-- /container -->

    </div>
    <!-- /subpage -->

    @Html.Partial("Extra")

    @Html.Partial("Footer")

    @Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/jqueryMigrate")
	@Scripts.Render("~/js/common")
	@Scripts.Render("~/bundles/jqueryUI")

    <script>
        $(function () {

        });
    </script>
</body>
</html>
