@using System.Web.Optimization
@using TekConf.RemoteData.Dtos.v1
@using TekConf.UI.Web
@model TekConf.RemoteData.Dtos.v1.SessionDto

@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico">
	<title>@Model.title - tekconf</title>

	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="description" content="@Model.title @Model.conferenceName Conference Schedule" />

	<link href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600" rel="stylesheet" type="text/css">
		<link rel="search" type="application/opensearchdescription+xml" href="http://www.tekconf.com/TekConf.xml" title="TekConf Search" /> 
	@Styles.Render("~/css/session/detail")

	<!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
	<!--[if lt IE 9]>
<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
<![endif]-->
	<!-- API NOTE : This page is generated by calling http://api.tekconf.com/v1/conferences/@Model.conferenceSlug/sessions/@Model.slug -->

</head>

<body>

	@Html.Partial("Header")

	<div id="subheader">
		<div class="inner">
			<div class="container">
				<h1>@Html.ActionLink(Model.conferenceName, "Detail", "Conferences", null, new { conferenceSlug = Model.conferenceSlug })</h1>
			</div>
			<!-- /.container -->
		</div>
		<!-- /inner -->
	</div>
	<!-- /subheader -->

	<div id="subpage">
		<div class="container">
			<div class="row">
				<div class="span12">
					<div class="big-intro">@Model.title</div>
				</div>
				<!-- /span12 -->
			</div>
			<!-- /row -->
			<br />
			<br />

			<div class="row">
				<div class="span6">
					<p>@Model.description</p>
					<a href="#" class="btn btn-large btn-success btn-inverse">Add to Schedule</a>
				</div>
				<!-- /span6 -->

				<div class="span4">
					<div class="sidebar">
						<h4><span class="slash">//</span> More Information</h4>
						<p>
							<b>Time :</b>
							@Model.start.ToString("dddd h:mm")<text> - </text>@Model.end.ToString("h:mm")<br />
							
							@if (!string.IsNullOrWhiteSpace(Model.room))
							{
								<b>Room :</b>
								@Model.room<br />
							}
							
							@if (!string.IsNullOrWhiteSpace(Model.difficulty))
							{
								<b>Difficulty :</b>
								@Model.difficulty<br />
							}

							@if (!string.IsNullOrWhiteSpace(Model.sessionType))
							{
								<b>Type :</b>
								@Model.sessionType<br />
							}
							
							@if (!string.IsNullOrWhiteSpace(Model.twitterHashTag))
							{
								<b>Twitter :</b>
								@Model.twitterHashTag<br />
							}
						</p>
						@if (@Model.links.Any())
			{
							<b>Links</b>
							<p>
								@foreach (var link in @Model.links)
				{
									@link<br />
				}
							</p>
			}
						@if (Model.prerequisites.Any())
			{
							<b>Prerequisites</b>
							<p>
								@foreach (var prerequisite in @Model.prerequisites)
				{
									@prerequisite<br />
				}
							</p>
			}
						@if (Model.resources.Any())
			{
							<b>Resources</b>
							<p>
								@foreach (var resource in @Model.resources)
				{
									@resource<br />
				}
							</p>
			}
						@if (Model.subjects.Any())
			{
							<b>Subjects</b>
							<p>
								@foreach (var subject in @Model.subjects)
				{
									@subject<br />
				}
							</p>
			}
						@if (Model.tags.Any())
			{
							<b>Tags</b>
							<p>
								@foreach (var tag in @Model.tags)
				{
									@tag<br />
				}
							</p>
			}
						@if (Html.IsAdmin())
			{

							@Html.RouteLink("Edit Session", "AdminEditSession", new { conferenceSlug = Model.conferenceSlug, sessionSlug = Model.slug }, new { @class = "btn btn-info" })

							@Html.RouteLink("Add Speaker", "AdminAddSpeaker", new { conferenceSlug = Model.conferenceSlug, sessionSlug = Model.slug }, new { @class = "btn" })
			}
					</div>

				</div>

			</div>


			<br />
			<br />

			<div class="row">
				<div class="span12">
					<h3><span class="slash">//</span> Speakers</h3>
				</div>
				<!-- /span12 -->

				@foreach (var speaker in Model.speakers ?? new List<SpeakersDto>())
		{
					<div class="span4">
						<div class="about-user">
							@if (!string.IsNullOrWhiteSpace(speaker.profileImageUrl))
			 {
								<div class="img">
									<img src="@speaker.profileImageUrl" alt="@speaker.fullName" />
								</div>
			 }
							<h4>@Html.RouteLink(speaker.fullName, "SessionSpeakerDetail", new { conferenceSlug = Model.conferenceSlug, speakerSlug = speaker.slug }, null)</h4>

							<p>@speaker.description</p>
						</div>
						<!-- /about-user -->

					</div>
					<!-- /span4 -->                    
		}

			</div>
			<!-- /row -->
		</div>
		<!-- /container -->



	</div>
	<!-- /subpage -->

	@Html.Partial("Extra")


	@Html.Partial("Footer")

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/jqueryMigrate")
	@Scripts.Render("~/js/common")
	@Scripts.Render("~/bundles/jqueryUI")

	<script>
		$(function () {

		});
	</script>
</body>
</html>
